{
  "name": "Frappe Dev",
  "image": "frappe/bench:latest",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [8000, 3306, 6379],
  "postCreateCommand": "bench init frappe-bench --frappe-branch version-15",
  "mounts": [
    "source=${localWorkspaceFolder}/frappe-bench,target=/workspace/frappe-bench,type=bind"
  ]
}
